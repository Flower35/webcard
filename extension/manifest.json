{
  "manifest_version": 2,

  "name": "Smart Card Browser Extension",
  "description": "Enables a Web page to communicate with a locally connected smart card",
  "version": "0.2",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["nativeMessaging"]
}